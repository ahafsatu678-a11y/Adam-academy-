    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";
        import { getAuth, signInAnonymously, signInWithCustomToken, onAuthStateChanged } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js";
        import { getFirestore, doc, getDoc, setDoc, onSnapshot, collection, query, addDoc, getDocs, setLogLevel } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";

        // Global Variables (Provided by Canvas Environment)
        const appId = typeof __app_id !== 'undefined' ? __app_id : 'default-abas-academy-id';
        const firebaseConfig = typeof __firebase_config !== 'undefined' ? JSON.parse(__firebase_config) : { /* Mock config */ };
        const initialAuthToken = typeof __initial_auth_token !== 'undefined' ? __initial_auth_token : null;

        let app, db, auth, userId = 'loading';
        let isAuthReady = false;

        // Set Firebase Log Level for debugging
        setLogLevel('debug');

        /**
         * Initializes Firebase and authenticates the user.
         */
        async function initFirebase() {
            try {
                app = initializeApp(firebaseConfig);
                db = getFirestore(app);
                auth = getAuth(app);
                
                // 1. Initial Authentication
                if (initialAuthToken) {
                    await signInWithCustomToken(auth, initialAuthToken);
                } else {
                    await signInAnonymously(auth);
                }

                // 2. Auth State Listener
                onAuthStateChanged(auth, (user) => {
                    if (user) {
                        userId = user.uid;
                        document.getElementById('profile-user-id').textContent = userId;
                        document.getElementById('team-user-id').textContent = userId;
                        isAuthReady = true;
                        
                        // Start real-time listeners once authenticated
                        listenForProfileChanges(userId);
                        listenForPublicTutors();
                        listenForPublicTeams();
                    } else {
                        userId = 'anonymous';
                        isAuthReady = true; // Still ready, even if anonymous
                    }
                    document.getElementById('loading-indicator').classList.add('hidden');
                    showView('dashboard'); // Show default view after auth is ready
                });

            } catch (error) {
                console.error("Firebase Initialization Error:", error);
                showMessageBox('Error setting up the application. Check console for details.', 'error');
                document.getElementById('loading-indicator').classList.add('hidden');
            }
        }

        // --- Core Application State & View Management ---
        window.currentView = 'dashboard';
        window.lessonCompletedStatus = false;
        
        // --- NEW NOTIFICATION BELL TOGGLE FUNCTION ---

        /**
         * Toggles the visibility of the notification dropdown.
         */
        window.toggleNotificationDropdown = function() {
            const dropdown = document.getElementById('notification-dropdown');
            if (dropdown) {
                // Toggles the 'hidden' class on the dropdown element
                dropdown.classList.toggle('hidden');
            }
        }
        
        // --- END NEW NOTIFICATION BELL TOGGLE FUNCTION ---


        /**
         * Switches the main content view.
         * @param {string} viewId The ID of the view to show (e.g., 'dashboard', 'tutors').
         */
        window.showView = function(viewId) {
            document.querySelectorAll('.view').forEach(view => {
                view.classList.add('hidden');
            });
            document.getElementById(viewId + '-view').classList.remove('hidden');
            window.currentView = viewId;
            
            // Check if the chat button should be enabled on view switch
            updateChatButtonState();
            
            // Re-render lucide icons after view switch
            lucide.createIcons();
            
            // Ensure the notification dropdown is hidden when switching views
            const dropdown = document.getElementById('notification-dropdown');
            if (dropdown && !dropdown.classList.contains('hidden')) {
                dropdown.classList.add('hidden');
            }
        }

        /**
         * Simulates lesson completion and enables chat.
         */
        window.lessonCompleted = function() {
            window.lessonCompletedStatus = true;
            showMessageBox('Quiz Submitted! Chat is now enabled for the next 2 hours.', 'success');
            showView('dashboard');
            updateChatButtonState();
        }

        /**
         * Updates the state of the team chat button based on lesson completion.
         */
        function updateChatButtonState() {
            const chatButton = document.getElementById('chat-button');
            const chatStatus = document.getElementById('chat-status');
            if (chatButton && chatStatus) {
                if (window.lessonCompletedStatus) {
                    chatButton.disabled = false;
                    chatButton.textContent = 'Chat with Your Team';
                    chatButton.classList.add('bg-primary', 'hover:bg-teal-700');
                    chatButton.classList.remove('bg-gray-400', 'hover:bg-gray-400');
                    chatStatus.textContent = 'Chat is open! Go collaborate with your team.';
                } else {
                    chatButton.disabled = true;
                    chatButton.textContent = 'Complete a Lesson to Chat';
                    chatButton.classList.add('bg-gray-400');
                    chatButton.classList.remove('bg-primary', 'hover:bg-teal-700');
                    chatStatus.textContent = 'Chat opens automatically once you have completed a lesson or quiz!';
                }
            }
        }
        
        /**
         * Sets up the lesson view with topic details.
         */
        window.showLesson = function(subject, grade, topic) {
            document.getElementById('lesson-title').textContent = `${topic}`;
            document.getElementById('lesson-subtitle').textContent = `${subject} | ${grade}`;
            showView('lesson');
        }

        // --- Utility Functions ---
        
        /**
         * Displays a temporary, non-blocking message box.
         * @param {string} message The message to display.
         * @param {'success'|'error'|'info'} type The type of message.
         */
        function showMessageBox(message, type = 'info') {
            const box = document.getElementById('message-box');
            box.textContent = message;
            box.classList.remove('bg-green-500', 'bg-red-500', 'bg-blue-500', 'hidden');
            box.classList.add(
                type === 'success' ? 'bg-green-500' : 
                type === 'error' ? 'bg-red-500' : 'bg-blue-500'
            );
            box.style.opacity = '1';
            
            setTimeout(() => {
                box.style.opacity = '0';
                setTimeout(() => box.classList.add('hidden'), 300);
            }, 5000);
        }

        // --- Firestore Real-Time Listeners ---

        /**
         * Listens for the current user's profile and populates the form.
         * @param {string} uid User ID.
         */
        function listenForProfileChanges(uid) {
            if (!db || !isAuthReady) return;
            const profileRef = doc(db, 'artifacts', appId, 'users', uid, 'profiles', uid);
            onSnapshot(profileRef, (docSnap) => {
                if (docSnap.exists()) {
                    const data = docSnap.data();
                    document.getElementById('learner-name').value = data.name || '';
                    document.getElementById('learner-grade').value = data.grade || '';
                }
            }, (error) => {
                console.error("Error listening to profile:", error);
            });
        }
        
        /**
         * Listens for changes in the public tutor directory.
         */
        function listenForPublicTutors() {
            if (!db || !isAuthReady) return;
            const tutorsColRef = collection(db, 'artifacts', appId, 'public', 'data', 'tutors');
            onSnapshot(tutorsColRef, (snapshot) => {
                const tutorList = document.getElementById('tutor-list');
                if (!tutorList) return;
                tutorList.innerHTML = '';
                
                if (snapshot.empty) {
                    tutorList.innerHTML = '<p class="text-center text-gray-500">No tutors found yet. Be the first to sign up!</p>';
                    return;
                }
                
                snapshot.forEach(doc => {
                    const tutor = doc.data();
                    const subjectsTaught = Array.isArray(tutor.subjects) ? tutor.subjects.join(', ') : 'Not specified';
                    const gradesTaught = Array.isArray(tutor.grades) ? tutor.grades.join(', ') : 'Not specified';

                    const card = `
                        <div class="bg-white main-card p-4 flex flex-col sm:flex-row justify-between items-start sm:items-center">
                            <div>
                                <h3 class="text-xl font-bold text-gray-800">${tutor.name}</h3>
                                <p class="text-primary font-semibold">Teaches: ${subjectsTaught} (${gradesTaught})</p>
                                <div class="flex items-center text-sm text-gray-500">
                                    <i data-lucide="map-pin" class="h-4 w-4 mr-1"></i> ${tutor.address} | <i data-lucide="phone" class="h-4 w-4 mx-1"></i> ${tutor.contact.substring(0, 4)}...
                                </div>
                            </div>
                            <div class="flex flex-col items-start sm:items-end mt-3 sm:mt-0 space-y-1">
                                <div class="flex items-center">
                                    <span class="text-secondary text-xl font-bold mr-1">${(tutor.rating || 0).toFixed(1)}</span>
                                    <i data-lucide="star" class="h-4 w-4 fill-secondary text-secondary"></i>
                                    <span class="text-sm text-gray-500">(${tutor.reviewCount || 0} Reviews)</span>
                                </div>
                                <p class="text-sm font-semibold text-gray-800">Rate: ${tutor.price} GHS per lesson</p>
                                <button class="bg-primary text-white py-1 px-3 rounded-full text-sm hover:bg-teal-700 transition">Request Lesson</button>
                            </div>
                        </div>
                    `;
                    tutorList.insertAdjacentHTML('beforeend', card);
                });
                lucide.createIcons(); // Redraw icons for new elements
            }, (error) => {
                console.error("Error listening to tutors:", error);
            });
        }
        
        /**
         * Listens for changes in the public teams for the leaderboard.
         */
        function listenForPublicTeams() {
            if (!db || !isAuthReady) return;
            const teamsColRef = collection(db, 'artifacts', appId, 'public', 'data', 'teams');
            // NOTE: Sorting is done in memory to avoid Firestore index errors on orderBy()
            onSnapshot(teamsColRef, (snapshot) => {
                const teams = [];
                snapshot.forEach(doc => {
                    teams.push({ id: doc.id, ...doc.data() });
                });
                
                // Sort teams by points (in memory)
                teams.sort((a, b) => (b.points || 0) - (a.points || 0));

                const leaderboardList = document.getElementById('leaderboard-list');
                leaderboardList.innerHTML = '';
                
                teams.slice(0, 5).forEach((team, index) => {
                    const isTop = index === 0 ? 'font-bold text-lg' : '';
                    const teamItem = `
                        <li class="flex justify-between ${isTop}">
                            <span>${index + 1}. ${team.name} (${team.members.length}/25)</span> 
                            <span class="${isTop ? 'text-primary' : ''}">${(team.points || 0).toLocaleString()} pts</span>
                        </li>
                    `;
                    leaderboardList.insertAdjacentHTML('beforeend', teamItem);
                });
            }, (error) => {
                console.error("Error listening to teams:", error);
            });
        }

        // --- Form Submission Handlers ---

        /**
         * Handles learner profile submission.
         */
        document.getElementById('learner-profile-form').addEventListener('submit', async (e) => {
            e.preventDefault();
            if (!db || !userId) {
                showMessageBox('Application not fully initialized. Please wait.', 'error');
                return;
            }
            
            const name = document.getElementById('learner-name').value;
            const grade = document.getElementById('learner-grade').value;
            const profileRef = doc(db, 'artifacts', appId, 'users', userId, 'profiles', userId);

            try {
                await setDoc(profileRef, {
                    name: name,
                    grade: grade,
                    updatedAt: new Date().toISOString()
                }, { merge: true });
                showMessageBox('Learner Profile saved successfully!', 'success');
            } catch (error) {
                console.error("Error saving profile:", error);
                showMessageBox('Failed to save profile. See console.', 'error');
            }
        });

        /**
         * Handles tutor signup submission.
         */
        document.getElementById('tutor-signup-form').addEventListener('submit', async (e) => {
            e.preventDefault();
            if (!db || !userId) {
                showMessageBox('Application not fully initialized. Please wait.', 'error');
                return;
            }
            
            // Collect form data
            const name = document.getElementById('tutor-name').value;
            const address = document.getElementById('tutor-address').value;
            const contact = document.getElementById('tutor-contact').value;
            const price = parseFloat(document.getElementById('tutor-price').value);
            
            const selectedSubjects = Array.from(document.querySelectorAll('input[name="subject-grade"]:checked'));
            
            // Simple validation for the max 2 classes/subjects rule (better handled server-side)
            if (selectedSubjects.length === 0 || selectedSubjects.length > 2) {
                showMessageBox('You must select between 1 and 2 subjects/classes to teach.', 'error');
                return;
            }

            const subjects = selectedSubjects.map(s => s.value.split('-')[0]);
            const grades = selectedSubjects.map(s => s.value.split('-')[1]);
            
            const tutorDocRef = doc(db, 'artifacts', appId, 'public', 'data', 'tutors', userId);

            try {
                await setDoc(tutorDocRef, {
                    name: name,
                    address: address,
                    contact: contact,
                    subjects: subjects,
                    grades: grades,
                    price: price,
                    rating: 0,
                    reviewCount: 0,
                    status: 'pending review',
                    updatedAt: new Date().toISOString()
                }, { merge: true });
                showMessageBox('Tutor application submitted! We will review your profile shortly.', 'success');
                showView('tutors'); // Redirect to tutor view
            } catch (error) {
                console.error("Error saving tutor application:", error);
                showMessageBox('Failed to submit application. See console.', 'error');
            }
        });


        // --- Initialization ---
        document.addEventListener('DOMContentLoaded', () => {
            // Display loading indicator until auth is ready
            document.getElementById('loading-indicator').classList.remove('hidden');
            
            // Attach the toggle function to the notification bell
            const notificationBell = document.getElementById('notification-bell');
            if (notificationBell) {
                notificationBell.addEventListener('click', window.toggleNotificationDropdown);
            }
            
            initFirebase();
            lucide.createIcons();
        });

    </script>
</body>
</html>
